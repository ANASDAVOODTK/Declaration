<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#238E57"
    tools:context=".MainActivity">



    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#238E57"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context="com.tomlonghurst.expandablehinttexttest.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:padding="14dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="സത്യവാങ്മൂലം"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6sp"
                android:layout_marginTop="24dp">

                <AutoCompleteTextView
                    android:id="@+id/ed2"
                    android:drawableLeft="@drawable/ic_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:hint=" താങ്കളുടെ പേര്"
                    android:textSize="17sp"
                    android:padding="8dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6sp"
                android:layout_marginTop="24dp">

                <AutoCompleteTextView
                    android:id="@+id/place"
                    android:drawableLeft="@drawable/ic_baseline_place_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:hint=" നിങ്ങളുടെ സ്ഥലം"
                    android:textSize="17sp"
                    android:padding="8dp" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6sp"
                android:layout_marginTop="24dp">

                <AutoCompleteTextView
                    android:id="@+id/vname"
                    android:drawableLeft="@drawable/ic_car"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:hint=" വാഹനത്തിന്റെ പേര്"
                    android:textSize="17sp"
                    android:padding="8dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6sp"
                android:layout_marginTop="24dp">

                <AutoCompleteTextView
                    android:id="@+id/vnumber"
                    android:drawableLeft="@drawable/ic_baseline_24mp_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:hint=" വാഹനത്തിന്റെ നമ്പർ"
                    android:textSize="17sp"
                    android:padding="8dp" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6sp"
                android:layout_marginTop="24dp">

                <AutoCompleteTextView
                    android:id="@+id/address"
                    android:drawableLeft="@drawable/ic_baseline_home_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:hint=" വിലാസം"
                    android:textSize="17sp"
                    android:padding="8dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6sp"
                android:layout_marginTop="24dp">

                <AutoCompleteTextView
                    android:id="@+id/purpos"
                    android:drawableLeft="@drawable/ic_baseline_card_travel_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:hint=" ആവശ്യം"
                    android:textSize="17sp"
                    android:padding="8dp" />

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6sp"
                android:layout_marginTop="24dp">

                <AutoCompleteTextView
                    android:id="@+id/withme"
                    android:drawableLeft="@drawable/ic_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:hint=" എന്നോടൊപ്പമുളളത് (optional)"
                    android:textSize="17sp"
                    android:padding="8dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6sp"
                android:layout_marginTop="24dp">

                <AutoCompleteTextView
                    android:id="@+id/phone"
                    android:drawableLeft="@drawable/ic_baseline_phone_android_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:hint=" ഫോൺ"
                    android:textSize="17sp"
                    android:padding="8dp" />

            </androidx.cardview.widget.CardView>




            <LinearLayout
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/box"
                android:orientation="vertical"
                android:textColor="@color/purple_700">

                <TextView
                    android:id="@+id/thistime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="ഇത് എഴുതിയ സമയം"
                    android:textColor="@color/purple_700"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/box"
                android:orientation="vertical"
                android:textColor="@color/purple_700">

                <TextView
                    android:id="@+id/rtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="മടക്ക സമയം"
                    android:textColor="@color/purple_700"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/box"
                android:orientation="vertical"
                android:textColor="@color/purple_700">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="കയ്യൊപ്പ്"
                    android:textColor="@color/purple_700"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/img"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:src="@drawable/ic_baseline_edit_24" />


            <LinearLayout
                android:id="@+id/print"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="120sp"
                android:background="@drawable/box1"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingStart="100sp"
                android:textColor="@color/purple_700">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="Download"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_cloud_download_24" />

            </LinearLayout>

            <WebView
                android:id="@+id/vb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                tools:ignore="WebViewLayout" />


        </LinearLayout>

    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="670dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-5296162683363807/7872475100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scrollView2">

    </com.google.android.gms.ads.AdView>

</androidx.constraintlayout.widget.ConstraintLayout>